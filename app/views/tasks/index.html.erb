<h1>Listing tasks</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Points</th>
    <th>Description</th>
    <th>Story</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%= task.title %></td>
    <td><%= task.points %></td>
    <td><%= task.description %></td>
    <td><%= task.story %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

